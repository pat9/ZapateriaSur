extends ../Admin.pug
block migajas
      <h1> Ventas <small>Panel de control</small></h1>
      <ol class="breadcrumb">
        <li><a href="/dashboard"><i class="fa fa-dashboard"></i> Incio</a></li>
        <li class="active">Ventas</li>
      </ol>
block content
    div(class="box")
        <div class="box-header with-border">
            <h3 class="box-title">Venta #{Venta._id} &nbsp;&nbsp;</h3>
        </div>
        div(class="box-body")
            div(class="row")
                div(class="col-md-4")
                    h3 Comprador:
                    span #{Venta.usuario[0].nombre}
            div(class="row")
                div(class="col col-md-12")
                    table(class="table table-bordered")
                        tr
                            <th style="width: 10px">Id de pedido</th>
                            <th>Comprador</th>
                            <th>Id de pago Paypal</th>
                            <th>Total</th>
                            <th style="width: 70px">Acciones</th>
                        each venta in ventas
                            tr
                                td= venta._id
                                td= venta.usuario[0].nombre +" "+ venta.usuario[0].apellidos
                                td= venta.paymentId
                                td= "$"+venta.total
                                td
                                    a(href="/Zapatos/Edit/" ) Editar&nbsp;
                                    a(href="/Zapatos/Delete/" ) Eliminar
            